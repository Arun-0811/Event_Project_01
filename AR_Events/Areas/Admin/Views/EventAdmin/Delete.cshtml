@model AR_Events.Models.EventBookModel

@{
    ViewData["Title"] = "Delete Event";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="display-4 text-danger">Are you sure you want to delete this event?</h2>
            <p class="lead text-muted">Please confirm your action below.</p>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Event Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4"><strong>Event Name</strong></dt>
                        <dd class="col-sm-8">@Model.Event_Name</dd>

                        <dt class="col-sm-4"><strong>Start Date</strong></dt>
                        <dd class="col-sm-8">@Model.Event_StartDate.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-4"><strong>End Date</strong></dt>
                        <dd class="col-sm-8">@Model.Event_EndDate.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-4"><strong>Start Time</strong></dt>
                        <dd class="col-sm-8">
                            @DateTime.Today.Add(Model.Event_StartTime).ToString("hh:mm tt")
                        </dd>

                        <dt class="col-sm-4"><strong>End Time</strong></dt>
                        <dd class="col-sm-8">
                            @DateTime.Today.Add(Model.Event_EndTime).ToString("hh:mm tt")
                        </dd>

                        <dt class="col-sm-4"><strong>Location</strong></dt>
                        <dd class="col-sm-8">@Model.Event_location</dd>

                        <dt class="col-sm-4"><strong>Organizer</strong></dt>
                        <dd class="col-sm-8">@Model.Event_Organizer</dd>

                        <dt class="col-sm-4"><strong>Event Image</strong></dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <img src="~/images/@Model.ImagePath" alt="Event Image" class="img-fluid rounded border" style="max-height: 200px;" />
                            }
                            else
                            {
                                <span class="text-muted">No image available</span>
                            }
                        </dd>

                        <dt class="col-sm-4"><strong>Cost Per Person</strong></dt>
                        <dd class="col-sm-8">@Model.EventCost_PerPerson.ToString("C")</dd>

                        <dt class="col-sm-4"><strong>Total Amount</strong></dt>
                        <dd class="col-sm-8">@Model.Total_Amt.ToString("C")</dd>
                    </dl>

                    <form method="post" action="@Url.Action("DeleteConfirmed", "EventAdmin", new { id = Model.Id })">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-lg me-3 shadow-sm">
                            <i class="bi bi-trash"></i> Yes, Delete
                        </button>
                        <a href="@Url.Action("Index", "EventAdmin")" class="btn btn-secondary btn-lg shadow-sm">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                    </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
